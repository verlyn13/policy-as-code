{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "secure-pod",
    "namespace": "default"
  },
  "spec": {
    "containers": [
      {
        "name": "app",
        "image": "nginx:1.21",
        "securityContext": {
          "runAsNonRoot": true,
          "runAsUser": 1000,
          "privileged": false,
          "allowPrivilegeEscalation": false,
          "readOnlyRootFilesystem": true
        },
        "resources": {
          "limits": {
            "memory": "512Mi",
            "cpu": "500m"
          },
          "requests": {
            "memory": "256Mi",
            "cpu": "250m"
          }
        },
        "livenessProbe": {
          "httpGet": {
            "path": "/health",
            "port": 8080
          },
          "initialDelaySeconds": 30,
          "periodSeconds": 10
        },
        "readinessProbe": {
          "httpGet": {
            "path": "/ready",
            "port": 8080
          },
          "initialDelaySeconds": 5,
          "periodSeconds": 5
        }
      }
    ]
  }
}